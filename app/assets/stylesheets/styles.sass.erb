@import "foundation_and_overrides"
html, 
body
  height: 100%
span.not-bold
  font-weight: normal
.title
  font-weight: bold
  letter-spacing: 1px
  font-size: 24px
  text-transform: uppercase
  line-height: 50px
.title-area
  .name
    h1
      a
        text-transform: uppercase
        font-size: 22px
        letter-spacing: 1px
        font-weight: bold
        img
          margin-bottom: 3px
          margin-right: 10px
.top-bar-section ul.right li > a
  font-style: italic
.top-bar-section li:not(.has-form) a:not(.button):hover
  background: $dark-green
  cursor: default

#header
  text-align: center
  text-transform: uppercase
  margin-bottom: 20px
  margin-top: 20px
  #logo
    width: 100px
    height: 100px
#howto
  margin-bottom: 20px
  text-align: center
  div
    background-clip: content-box
    background-color: #fff
  p
    padding-left: 40px
    padding-right: 40px
  #howto-container
    padding: 20px
#controls
  margin-bottom: 20px
  text-align: center
  div
    background-clip: content-box
    background-color: #fff
  
  h2
    color: $darker-green
    background-clip: content-box
    background-color: $dark-blue
    margin: 0
    height: 50px
  #slider-row
    height: 50px
    margin-top: 13px
    margin-bottom: 20px
  #clock-row
    margin-top: 25px
    p
      font-weight: bold
  #button-row
    margin-top: 20px
    button
      text-transform: uppercase
      font-weight: bold
      letter-spacing: 1px
      width: 180px
      padding: 0 32px 0 32px
      line-height: 37px
      height: 37px
      img
        float: right
        margin-top: 12px
#maps
  p
    letter-spacing: 1px
    font-weight: bold
  #left-column
    margin-bottom: 20px
    background-clip: content-box
    background-color: #fff
    i
      width: 70px
      height: 70px
      line-height: 70px
      border-radius: 50%
      color: white
      background-color: $red
      margin-top: 46px
  #right-column
    margin-bottom: 20px
    background-clip: content-box
    background-color: #fff
    i
      line-height: 70px
      width: 70px
      height: 70px
      border-radius: 50%
      color: white
      background-color: $dark-green
      margin-top: 46px
  .map_canvas
    height: 400px


#slider.ui-slider
  height: 10px
  background: $light-grey
  border: 0
  margin-top: 22px
  padding-left: 25px
  padding-right: 25px
  .ui-slider-handle
    margin-top: -14px
    border: 2px solid
    border-color: #d5d4d2
    border-radius: 50%
    width: 50px
    height: 50px
    background: url(<%= image_path('truck.svg') %>) no-repeat center center
    -webkit-background-size: contain
    -moz-background-size: contain
    -o-background-size: contain
    background-size: contain
.curtains
  width: 100%
  position: relative
  height: 10px
  background: url(<%= image_path('green_mark.png') %>) left -10px repeat-x
.digit
  background-color: $grey
  padding: 10px
  margin-left: 5px
  margin-right: 5px
  color: $antrisit
.money
  background-color: $grey
  width: 150px
  padding: 10px
  color: $antrisit
  display: inline-block
  margin: 0
.header-background
  background-color: $dark-green
  position: absolute
  content: ""
  top: 0
  left: 0
  right: 0
  height: 60px
  width: 100%
.icon
  text-align: center
  color: white
.red
  text-transform: uppercase
  color: $red
.light-green
  text-transform: uppercase
  color: $dark-green
.reverse
  -ms-transform: rotate(180deg)
  -webkit-transform: rotate(180deg)
  transform: rotate(180deg)
#footer
  background-color: $dark-green
  text-align: center
  margin-bottom: 0
  color: white
  height: 50px
  line-height: 50px
.d3map
  width: 100%
  height: 100%
  -webkit-transform: none
  position: relative
  top: 0px
  left: 0px
  svg
    width: 100%
    height: 100%
    .truck
      fill: $success-color
      opacity: 1.0
    .container
      fill: $alert-color
      stroke-width: 1
      stroke: $alert-color
    .path
      stroke-width: 2
      stroke: $blue
      fill: transparent
      
